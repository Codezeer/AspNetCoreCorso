
@model List<CourseViewModel>;
<div class="row">
    <div class="col-md-8">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <!--asp-controller="Courses" asp-action="Index" in questo caso non serve dato che la view è già associata a questo percorso-->  
        <form asp-controller="Courses" asp-action="Index" method="get">
            <div class="input-group">
            <input class="form-control" type="text" name="search" placeholder="Cerca...">
            <div class="input-group-append">
                    <button class="input-group-text"><i class="fas fa-search"></i></button>
            </div>
            </div>
        </form>
    </div>
</div>
@foreach (CourseViewModel course in Model)
{
<hr>
<div class="row course">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="52" height="52">
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2 rating" title="@course.Rating">
        @for (int i = 1; i <= 5; i++)
        {
            if(course.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if(course.Rating > i -1)
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }
        }
    </div>
    <div class="col-md-2 price">
        @course.CurrentPrice
        @if(!@course.FullPrice.Equals(@course.CurrentPrice))
        {
            <br><s>@course.FullPrice</s>
        }
        
    </div>
    <div class="col-md-2 d-flex align-items-center">
      <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>  
    </div>
</div>
}